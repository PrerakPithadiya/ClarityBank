
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       ðŸ” Helper Functions
       ========================= */

    // Authentication Checks
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.role == "admin";
    }

    // Utility: Ensure allowed fields only
    function hasOnly(fields) {
      return request.resource.data.keys().hasOnly(fields);
    }

    // Utility: Ensure all required fields exist
    function hasAll(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // Utility: Validate server-generated timestamps
    function isServerTimestamp(field) {
      return request.resource.data[field] == request.time;
    }

    /* =========================
       ðŸ‘¤ USERS COLLECTION
       Path: /users/{userId}
       ========================= */
    match /users/{userId} {
      function isValidUserProfile() {
        return hasOnly(["id", "firstName", "lastName", "email", "createdAt", "updatedAt"]) &&
               request.resource.data.id == userId &&
               request.resource.data.firstName is string &&
               request.resource.data.lastName is string &&
               request.resource.data.email is string &&
               isServerTimestamp("createdAt") &&
               isServerTimestamp("updatedAt");
      }

      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if false; // No public listing of users
      allow create: if isSignedIn() && isOwner(userId) && isValidUserProfile();
      allow update: if isSignedIn() && isOwner(userId) && isValidUserProfile();
      allow delete: if isSignedIn() && (isOwner(userId) || isAdmin());

      /* =========================
         ðŸ… BADGES SUBCOLLECTION
         Path: /users/{userId}/badges/{badgeId}
         ========================= */
      match /badges/{badgeId} {
        function isValidBadge() {
          return hasOnly(["id", "name", "description", "dateEarned"]) &&
                 request.resource.data.id == badgeId &&
                 request.resource.data.name is string &&
                 request.resource.data.description is string &&
                 request.resource.data.dateEarned is timestamp; // or string if you prefer ISO
        }

        allow get, list: if isSignedIn() && isOwner(userId);
        // Badges should be awarded by server-side logic (e.g., Cloud Functions), not directly by clients.
        allow create, update, delete: if false; 
      }
    }

    /* =========================
       ðŸ¦ BANK ACCOUNTS
       Path: /users/{userId}/bankAccounts/{bankAccountId}
       ========================= */
    match /users/{userId}/bankAccounts/{bankAccountId} {
      function isBankAccountValid() {
        return hasOnly(["userId", "bankId", "bankName", "accountNumber", "balance", "createdAt", "updatedAt"]) &&
               request.resource.data.userId == userId &&
               request.resource.data.bankId is string &&
               request.resource.data.bankName is string &&
               request.resource.data.accountNumber is string &&
               request.resource.data.balance is number &&
               request.resource.data.balance >= 0 &&
               isServerTimestamp("createdAt") &&
               isServerTimestamp("updatedAt");
      }

      function isBalanceValid() {
        return request.resource.data.balance is number;
      }

      function isValidDeposit(currentBalance, newBalance) {
        return newBalance > currentBalance;
      }

      function isValidWithdrawal(currentBalance, newBalance) {
        let isNotNegative = newBalance >= 0;
        let isDecreasing = newBalance < currentBalance;
        return isNotNegative && isDecreasing;
      }

      allow get, list: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow create: if isSignedIn() && isOwner(userId) && isBankAccountValid();
      allow update: if isSignedIn() &&
                       isOwner(userId) &&
                       isBalanceValid() &&
                       (isValidDeposit(resource.data.balance, request.resource.data.balance) ||
                        isValidWithdrawal(resource.data.balance, request.resource.data.balance));
      allow delete: if isSignedIn() && (isOwner(userId) || isAdmin());
    }

    /* =========================
       ðŸ’¸ TRANSACTIONS
       Path: /users/{userId}/bankAccounts/{bankAccountId}/transactions/{transactionId}
       ========================= */
    match /users/{userId}/bankAccounts/{bankAccountId}/transactions/{transactionId} {
      function isTransactionValid() {
        return hasAll(["bankAccountId", "userId", "type", "amount", "description", "category", "timestamp"]) &&
               request.resource.data.bankAccountId == bankAccountId &&
               request.resource.data.userId == userId &&
               (request.resource.data.type == "deposit" || request.resource.data.type == "withdrawal") &&
               request.resource.data.amount is number &&
               request.resource.data.amount > 0 &&
               request.resource.data.description is string &&
               request.resource.data.category is string &&
               isServerTimestamp("timestamp");
      }

      allow get, list: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow create: if isSignedIn() && isOwner(userId) && isTransactionValid();
      allow update: if false; // Immutable records
      allow delete: if false; // Immutable records
    }
  }
}
